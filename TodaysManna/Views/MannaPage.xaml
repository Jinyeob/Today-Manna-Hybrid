<ContentPage
    x:Class="TodaysManna.Views.MannaPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
    xmlns:local="clr-namespace:TodaysManna.Views;assembly=TodaysManna"
    xmlns:w="clr-namespace:AiForms.Layouts;assembly=AiForms.Layouts"
    xmlns:yummy="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
    Title="만나"
    ios:Page.PrefersHomeIndicatorAutoHidden="true"
    ios:Page.UseSafeArea="true"
    BackgroundColor="{AppThemeBinding Dark=#2e2e2e,
                                      Light=White}"
    NavigationPage.HasNavigationBar="False"
    Shell.NavBarIsVisible="False">

    <StackLayout BackgroundColor="{AppThemeBinding Dark=#2e2e2e, Light=White}" Spacing="0">
        <StackLayout Padding="15,0,15,0" Orientation="Horizontal">
            <Label
                BackgroundColor="Transparent"
                FontAttributes="Bold"
                FontSize="20"
                HorizontalOptions="Start"
                Text="만나"
                TextColor="{AppThemeBinding Dark=White,
                                            Light=Black}"
                VerticalOptions="Center" />
            <ImageButton
                x:Name="toolbar_datepicker"
                Margin="0"
                Padding="0,0,15,0"
                BackgroundColor="Transparent"
                BorderWidth="0"
                Clicked="OnEnglishButtonClicked"
                HorizontalOptions="EndAndExpand"
                Source="ic_english"
                VerticalOptions="Center" />
            <ImageButton
                Margin="0,0,5,0"
                Padding="8"
                BackgroundColor="Transparent"
                Clicked="OnShareButtonClicked"
                HorizontalOptions="End"
                Source="share"
                VerticalOptions="Center" />
        </StackLayout>

        <BoxView
            Margin="0"
            HeightRequest="1"
            Color="LightGray" />

        <ScrollView VerticalScrollBarVisibility="Default">
            <StackLayout Padding="15" BackgroundColor="{AppThemeBinding Dark=#2e2e2e, Light=White}">
                <Label
                    x:Name="today"
                    Text="{Binding Today}"
                    TextColor="Gray" />
                <yummy:PancakeView
                    x:Name="rangeButton"
                    Margin="0,10,0,20"
                    BackgroundGradientEndPoint="0.5,0.0"
                    BackgroundGradientStartPoint="0.0,0.5"
                    CornerRadius="20"
                    HeightRequest="80"
                    HorizontalOptions="StartAndExpand"
                    WidthRequest="200">
                    <yummy:PancakeView.Shadow>
                        <yummy:DropShadow Offset="2,2" Color="#000000" />
                    </yummy:PancakeView.Shadow>
                    <yummy:PancakeView.BackgroundGradientStops>
                        <yummy:GradientStopCollection>
                            <yummy:GradientStop Offset="0" Color="LightPink" />
                            <yummy:GradientStop Offset="1" Color="LightSkyBlue" />
                        </yummy:GradientStopCollection>
                    </yummy:PancakeView.BackgroundGradientStops>
                    <Label
                        x:Name="allRangeLabel"
                        FontSize="16"
                        HorizontalOptions="Center"
                        HorizontalTextAlignment="Center"
                        Text="{Binding ShareRange}"
                        TextColor="White"
                        VerticalOptions="Center" />
                </yummy:PancakeView>


                <Label
                    x:Name="verse"
                    FontAttributes="Bold"
                    Text="{Binding JsonMannaData.Verse}"
                    TextColor="{AppThemeBinding Dark=White,
                                                Light=Black}" />

                <w:RepeatableWrapLayout
                    Margin="0"
                    Padding="0"
                    BackgroundColor="{AppThemeBinding Dark=#2e2e2e,
                                                      Light=White}"
                    ItemsSource="{Binding MannaContents}"
                    Spacing="20">
                    <w:RepeatableWrapLayout.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
                                </Grid.GestureRecognizers>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Label
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Text="{Binding Number}"
                                    TextColor="{AppThemeBinding Dark=White,
                                                                Light=Black}" />
                                <Label
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    LineBreakMode="CharacterWrap"
                                    Text="{Binding MannaString}"
                                    TextColor="{AppThemeBinding Dark=White,
                                                                Light=Black}" />
                            </Grid>

                        </DataTemplate>
                    </w:RepeatableWrapLayout.ItemTemplate>
                </w:RepeatableWrapLayout>
            </StackLayout>
        </ScrollView>
    </StackLayout>
</ContentPage>

