<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="TodaysManna.Views.MccheynePage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TodaysManna.Views;assembly=TodaysManna"
    xmlns:w="clr-namespace:AiForms.Layouts;assembly=AiForms.Layouts"
    xmlns:yummy="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
    Padding="0,40,0,0"
    BackgroundColor="{AppThemeBinding Dark=#23535e,
                                      Light=#91D9EB}"
    NavigationPage.HasNavigationBar="False">
    <ContentPage.Content />

    <StackLayout>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>

                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="180" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Image
                Grid.Column="1"
                Source="title"
                WidthRequest="180" />

        </Grid>

        <yummy:PancakeView
            BackgroundColor="{AppThemeBinding Dark=#2e2e2e,
                                              Light=White}"
            CornerRadius="20,20,0,0"
            VerticalOptions="FillAndExpand">

            <AbsoluteLayout>
                <StackLayout AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All">
                    <Frame Margin="0" Padding="0">
                        <Grid x:Name="topGrid">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <DatePicker
                                x:Name="datepicker"
                                Grid.Row="0"
                                Grid.ColumnSpan="3"
                                BackgroundColor="Transparent"
                                DateSelected="DatePicker_DateSelected"
                                Format="D" />
                            <Button
                                Grid.Row="0"
                                Grid.Column="3"
                                Clicked="Button_Clicked"
                                Text="오늘로" />
                        </Grid>
                    </Frame>
                    <ScrollView x:Name="scrollView">
                        <StackLayout Padding="30,0,30,30">
                            <FlexLayout
                                x:Name="mccheyneView"
                                AlignContent="Start"
                                AlignItems="Center"
                                BackgroundColor="{AppThemeBinding Dark=#2e2e2e,
                                                                  Light=White}"
                                BindableLayout.ItemsSource="{Binding MccheyneContents1}"
                                Direction="Row"
                                JustifyContent="Center"
                                Wrap="Wrap">
                                <BindableLayout.ItemTemplate>
                                    <DataTemplate>
                                        <StackLayout
                                            Padding="0,20,0,0"
                                            BackgroundColor="{AppThemeBinding Dark=#2e2e2e,
                                                                              Light=White}"
                                            Orientation="Vertical">
                                            <StackLayout Orientation="Horizontal">
                                                <Label Text="{Binding Book}" />
                                                <Label Text="{Binding Verse}" />
                                            </StackLayout>
                                            <Label Text="{Binding Content}" />
                                        </StackLayout>
                                    </DataTemplate>
                                </BindableLayout.ItemTemplate>
                            </FlexLayout>
                        </StackLayout>
                    </ScrollView>
                </StackLayout>
                <ImageButton
                    x:Name="leftImageButton"
                    AbsoluteLayout.LayoutBounds=".1,.95,25,25"
                    AbsoluteLayout.LayoutFlags="PositionProportional"
                    BackgroundColor="Transparent"
                    Clicked="OnLeftButtonClicked"
                    Source="ic_left" />
                <ImageButton
                    x:Name="rightImageButton"
                    AbsoluteLayout.LayoutBounds=".95,.95,25,25"
                    AbsoluteLayout.LayoutFlags="PositionProportional"
                    BackgroundColor="Transparent"
                    Clicked="OnRightButtonClicked"
                    Source="ic_right" />
            </AbsoluteLayout>
        </yummy:PancakeView>

    </StackLayout>
</ContentPage>


