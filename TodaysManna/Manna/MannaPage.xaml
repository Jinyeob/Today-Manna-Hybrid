<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TodaysManna.MannaPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="오늘의 만나">
    
    <ContentPage.ToolbarItems>
        <ToolbarItem Command="{Binding ShareCommand}" IconImageSource="Share" />
    </ContentPage.ToolbarItems>
    
    <StackLayout>
        <RefreshView
            Padding="10"
            Command="{Binding ReloadCommand}"
            IsRefreshing="{Binding IsReloading}">
            <ScrollView>
                    <StackLayout Padding="15,20,15,0">
                        <Label
                            Text="{Binding TodayString}"
                            TextDecorations="Underline" FontSize="Large"/>

                        <Label
                            FontAttributes="Bold"
                            Text="{Binding TitleString}" FontSize="Title" />

                        <Label Text="{Binding AllString}" FontSize="Body" />
                    </StackLayout>
            </ScrollView>

        </RefreshView>

    </StackLayout>
</ContentPage>