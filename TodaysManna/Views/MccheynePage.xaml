<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="TodaysManna.Views.MccheynePage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
    Title="맥체인"
    ios:Page.PrefersHomeIndicatorAutoHidden="true"
    ios:Page.UseSafeArea="true"
    BackgroundColor="{AppThemeBinding Dark=#2e2e2e,
                                      Light=White}"
    NavigationPage.BackButtonTitle=""
    NavigationPage.HasNavigationBar="True"
    Shell.NavBarIsVisible="False">

    <NavigationPage.TitleView>
        <StackLayout Padding="15,0,15,0" Orientation="Horizontal">
            <Label
                BackgroundColor="Transparent"
                FontAttributes="Bold"
                FontSize="Title"
                HorizontalOptions="Start"
                Text="맥체인"
                VerticalOptions="Center" />
            <!--<ImageButton
                x:Name="checkButton"
                Margin="0"
                Padding="0,0,15,0"
                BackgroundColor="Transparent"
                BorderWidth="0"
                Clicked="OnCheckButtonClicked"
                HorizontalOptions="EndAndExpand"
                Source="ic_check"
                VerticalOptions="Center"
                WidthRequest="40" />-->
            <ImageButton
                Margin="0,0,5,0"
                Padding="8"
                BackgroundColor="Transparent"
                Clicked="OnDateButtonClicked"
                HorizontalOptions="End"
                Source="ic_dateselect"
                VerticalOptions="Center"
                WidthRequest="40" />
        </StackLayout>
    </NavigationPage.TitleView>


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>


        <ListView
            x:Name="mccheyneView"
            Margin="15,0,15,0"
            BackgroundColor="{AppThemeBinding Dark=#2e2e2e,
                                              Light=White}"
            Footer=""
            HasUnevenRows="True"
            Header="{Binding .}"
            ItemSelected="OnItemSelected"
            ItemsSource="{Binding MccheyneContents1}"
            Scrolled="OnListViewScrolled"
            SeparatorVisibility="None"
            VerticalOptions="Fill"
            VerticalScrollBarVisibility="Always">
            <ListView.HeaderTemplate>
                <DataTemplate>
                    <StackLayout Orientation="Vertical">
                        <!--<BoxView BackgroundColor="Transparent" HeightRequest="10" />-->
                        <StackLayout Orientation="Horizontal">
                            <Label
                                FontFamily="dotum.ttf"
                                Text="{Binding DisplayDateRange}"
                                TextColor="Gray"
                                VerticalOptions="CenterAndExpand" />
                            <Button
                                BackgroundColor="Transparent"
                                Clicked="OnTodayButtonClicked"
                                FontFamily="dotum.ttf"
                                Text="오늘로"
                                TextColor="#0000EE"
                                VerticalOptions="CenterAndExpand" />
                        </StackLayout>
                        <Label
                            FontAttributes="Bold"
                            FontFamily="dotum.ttf"
                            Text="{Binding VerseRange}"
                            TextColor="{AppThemeBinding Dark=White,
                                                        Light=Black}">
                            <Label.FontSize>
                                <OnPlatform
                                    x:TypeArguments="x:Double"
                                    Android="26"
                                    iOS="20" />
                            </Label.FontSize>
                        </Label>
                    </StackLayout>
                </DataTemplate>
            </ListView.HeaderTemplate>
            <ListView.FooterTemplate>
                <DataTemplate>
                    <StackLayout
                        BackgroundColor="{AppThemeBinding Dark=#2e2e2e,
                                                          Light=White}"
                        Orientation="Vertical"
                        Spacing="0">
                        <Label HorizontalOptions="CenterAndExpand">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span
                                        FontSize="14"
                                        Text="&#10;오류 제보&#10;&#10;&#10;&#10;&#10;"
                                        TextColor="Blue">
                                        <Span.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="OnReportTapped" />
                                        </Span.GestureRecognizers>
                                    </Span>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                    </StackLayout>
                </DataTemplate>
            </ListView.FooterTemplate>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Padding="0,10,0,10" BackgroundColor="{AppThemeBinding Dark=#2e2e2e, Light=White}">

                            <Label
                                FontAttributes="Bold"
                                FontFamily="dotum.ttf"
                                Text="{Binding HalfVerse}"
                                TextColor="{AppThemeBinding Dark=White,
                                                            Light=Black}">
                                <Label.FontSize>
                                    <OnPlatform
                                        x:TypeArguments="x:Double"
                                        Android="22"
                                        iOS="16" />
                                </Label.FontSize>
                            </Label>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Label
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    FontSize="Body"
                                    Text="{Binding SecondNumber}"
                                    TextColor="{AppThemeBinding Dark=White,
                                                                Light=Black}" />
                                <Label
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    FontFamily="dotum.ttf"
                                    LineBreakMode="CharacterWrap"
                                    Text="{Binding Content}"
                                    TextColor="{AppThemeBinding Dark=White,
                                                                Light=Black}">
                                    <Label.FontSize>
                                        <OnPlatform
                                            x:TypeArguments="x:Double"
                                            Android="20"
                                            iOS="18" />
                                    </Label.FontSize>
                                </Label>
                            </Grid>
                        </StackLayout>
                    </ViewCell>

                </DataTemplate>

            </ListView.ItemTemplate>
        </ListView>

        <BoxView
            x:Name="backgroundBoxView"
            Grid.Row="0"
            BackgroundColor="#30000000"
            IsVisible="false">
            <BoxView.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnBackgroundTapped" />
            </BoxView.GestureRecognizers>
        </BoxView>

        <DatePicker
            x:Name="datepicker"
            BackgroundColor="Transparent"
            DateSelected="OnDatePickerDateSelected"
            Format="D"
            IsVisible="false"
            Unfocused="OnDatepickerUnfocused" />

        <Grid
            x:Name="bottomGrid"
            Margin="0,0,0,10"
            BackgroundColor="Transparent"
            VerticalOptions="End">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button
                x:Name="leftImageButton"
                Grid.Column="0"
                BackgroundColor="Transparent"
                Clicked="OnLeftButtonClicked"
                FontSize="40"
                IsVisible="false"
                Text="◀"
                TextColor="#0000EE" />
            <Frame
                x:Name="centerFrame"
                Grid.Column="1"
                Margin="0"
                Padding="0"
                BackgroundColor="Transparent"
                CornerRadius="15"
                HasShadow="False">
                <Label
                    x:Name="centerLocationLabel"
                    BackgroundColor="Transparent"
                    FontSize="15"
                    HorizontalOptions="CenterAndExpand"
                    Text="1/4"
                    TextColor="{AppThemeBinding Dark=White,
                                                Light=Black}"
                    VerticalOptions="CenterAndExpand" />
            </Frame>
            <Button
                x:Name="rightImageButton"
                Grid.Column="2"
                BackgroundColor="Transparent"
                Clicked="OnRightButtonClicked"
                FontSize="40"
                Text="▶"
                TextColor="#0000EE" />
        </Grid>
    </Grid>
</ContentPage>