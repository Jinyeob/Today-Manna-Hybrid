<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="TodaysManna.Views.MccheynePage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
    xmlns:local="clr-namespace:TodaysManna.Views;assembly=TodaysManna"
    xmlns:yummy="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
    Title="맥체인"
    ios:Page.PrefersHomeIndicatorAutoHidden="true"
    ios:Page.UseSafeArea="true"
    BackgroundColor="{AppThemeBinding Dark=#2e2e2e,
                                      Light=White}"
    NavigationPage.HasNavigationBar="False">
    <StackLayout BackgroundColor="{AppThemeBinding Dark=#2e2e2e, Light=White}" Spacing="0">
        <StackLayout Padding="15,0,15,0" Orientation="Horizontal">
            <Label
                FontAttributes="Bold"
                FontSize="20"
                HorizontalOptions="Start"
                Text="맥체인"
                VerticalOptions="Center" />
            <Button
                x:Name="todayLabel"
                Margin="0"
                Padding="0,0,15,0"
                BorderWidth="0"
                Clicked="OnDateButtonClicked"
                HorizontalOptions="EndAndExpand"
                Text="다른날짜"
                VerticalOptions="Center" />
            <Button
                Margin="0,0,5,0"
                Clicked="OnTodayButtonClicked"
                HorizontalOptions="End"
                Text="오늘로"
                VerticalOptions="Center" />
        </StackLayout>

        <BoxView
            Margin="0"
            HeightRequest="1"
            Color="LightGray" />

        <AbsoluteLayout BackgroundColor="{AppThemeBinding Dark=#2e2e2e, Light=White}">
            <StackLayout
                Padding="15,0,15,0"
                AbsoluteLayout.LayoutBounds="0,0,1,1"
                AbsoluteLayout.LayoutFlags="All"
                BackgroundColor="{AppThemeBinding Dark=#2e2e2e,
                                                  Light=White}">
                <DatePicker
                    x:Name="datepicker"
                    Grid.Row="0"
                    Grid.ColumnSpan="3"
                    BackgroundColor="Transparent"
                    DateSelected="DatePicker_DateSelected"
                    Format="D"
                    IsVisible="false" />
                <ListView
                    x:Name="mccheyneView"
                    AbsoluteLayout.LayoutBounds="0,0,1,1"
                    AbsoluteLayout.LayoutFlags="All"
                    BackgroundColor="{AppThemeBinding Dark=#2e2e2e,
                                                      Light=White}"
                    Footer="&#10;&#10;&#10;"
                    HasUnevenRows="True"
                    ItemSelected="OnItemSelected"
                    ItemsSource="{Binding MccheyneContents1}"
                    Scrolled="OnListViewScrolled"
                    SeparatorVisibility="None"
                    VerticalScrollBarVisibility="Always">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <StackLayout
                                    Padding="0,10,0,10"
                                    BackgroundColor="{AppThemeBinding Dark=#2e2e2e,
                                                                      Light=White}"
                                    Orientation="Vertical">
                                    <StackLayout Orientation="Horizontal">
                                        <Label Text="{Binding Book}" />
                                        <Label LineBreakMode="CharacterWrap" Text="{Binding Verse}" />
                                    </StackLayout>
                                    <Label Text="{Binding Content}" />
                                </StackLayout>
                            </ViewCell>

                        </DataTemplate>

                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>

            <ImageButton
                x:Name="leftImageButton"
                AbsoluteLayout.LayoutBounds=".1,.95,40,40"
                AbsoluteLayout.LayoutFlags="PositionProportional"
                BackgroundColor="{AppThemeBinding Dark=Gray,
                                                  Light=White}"
                Clicked="OnLeftButtonClicked"
                CornerRadius="20"
                IsVisible="false"
                Source="ic_left" />
            <Frame
                x:Name="centerFrame"
                Margin="0"
                Padding="0"
                AbsoluteLayout.LayoutBounds=".5,.95,35,35"
                AbsoluteLayout.LayoutFlags="PositionProportional"
                BackgroundColor="{AppThemeBinding Dark=#2e2e2e,
                                                  Light=White}"
                CornerRadius="15"
                HasShadow="False">
                <Label
                    x:Name="centerLocationLabel"
                    BackgroundColor="Transparent"
                    FontSize="15"
                    HorizontalOptions="CenterAndExpand"
                    Text="1/4"
                    TextColor="{AppThemeBinding Dark=White,
                                                Light=Black}"
                    VerticalOptions="CenterAndExpand" />
            </Frame>
            <ImageButton
                x:Name="rightImageButton"
                AbsoluteLayout.LayoutBounds=".95,.95,40,40"
                AbsoluteLayout.LayoutFlags="PositionProportional"
                BackgroundColor="{AppThemeBinding Dark=Gray,
                                                  Light=White}"
                Clicked="OnRightButtonClicked"
                CornerRadius="20"
                Source="ic_right" />
        </AbsoluteLayout>
    </StackLayout>
</ContentPage>

