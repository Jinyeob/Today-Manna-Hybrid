<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="TodaysManna.Views.MccheynePage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
    xmlns:local="clr-namespace:TodaysManna.Views;assembly=TodaysManna"
    xmlns:yummy="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
    Title="맥체인"
    ios:Page.PrefersHomeIndicatorAutoHidden="true"
    ios:Page.UseSafeArea="true"
    BackgroundColor="{AppThemeBinding Dark=#2e2e2e,
                                      Light=White}"
    NavigationPage.HasNavigationBar="False">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackLayout
            Grid.Row="0"
            BackgroundColor="{AppThemeBinding Dark=#2e2e2e,
                                              Light=White}"
            Orientation="Vertical"
            Spacing="0"
            VerticalOptions="StartAndExpand">
            <StackLayout Padding="15,0,15,0" Orientation="Horizontal">
                <Label
                    FontAttributes="Bold"
                    FontSize="20"
                    HorizontalOptions="Start"
                    Text="맥체인"
                    VerticalOptions="Center" />

                <Button
                    x:Name="checkButton"
                    Margin="0"
                    Padding="0,0,15,0"
                    BorderWidth="0"
                    Clicked="checkButton_Clicked"
                    HorizontalOptions="EndAndExpand"
                    Text="체크"
                    VerticalOptions="Center" />
                <Button
                    x:Name="todayLabel"
                    Margin="0"
                    Padding="0,0,15,0"
                    BorderWidth="0"
                    Clicked="OnDateButtonClicked"
                    HorizontalOptions="EndAndExpand"
                    Text="다른날짜"
                    VerticalOptions="Center" />
                <DatePicker
                    x:Name="datepicker"
                    Grid.Row="0"
                    Grid.ColumnSpan="3"
                    BackgroundColor="Transparent"
                    DateSelected="DatePicker_DateSelected"
                    Format="D"
                    IsVisible="false" />
                <Button
                    Margin="0,0,5,0"
                    Clicked="OnTodayButtonClicked"
                    HorizontalOptions="End"
                    Text="오늘로"
                    VerticalOptions="Center" />
            </StackLayout>

            <BoxView
                Margin="0"
                HeightRequest="1"
                Color="LightGray" />
        </StackLayout>

        <ListView
            x:Name="mccheyneView"
            Grid.Row="1"
            Margin="15,0,15,0"
            BackgroundColor="{AppThemeBinding Dark=#2e2e2e,
                                              Light=White}"
            Footer=""
            HasUnevenRows="True"
            Header="{Binding .}"
            ItemSelected="OnItemSelected"
            ItemsSource="{Binding MccheyneContents1}"
            Scrolled="OnListViewScrolled"
            SeparatorVisibility="None"
            VerticalOptions="Fill"
            VerticalScrollBarVisibility="Always">
            <ListView.HeaderTemplate>
                <DataTemplate>
                    <StackLayout Orientation="Vertical">
                        <Label FontAttributes="Bold" Text="{Binding VerseRange}" />
                    </StackLayout>
                </DataTemplate>
            </ListView.HeaderTemplate>
            <ListView.FooterTemplate>
                <DataTemplate>
                    <StackLayout
                        BackgroundColor="{AppThemeBinding Dark=#2e2e2e,
                                                          Light=White}"
                        Orientation="Vertical"
                        Spacing="0">
                        <Label HorizontalOptions="CenterAndExpand">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span
                                        FontAttributes="Italic"
                                        FontSize="14"
                                        Text="&#10;오류 제보&#10;&#10;&#10;&#10;&#10;"
                                        TextColor="Blue">
                                        <Span.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
                                        </Span.GestureRecognizers>
                                    </Span>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                    </StackLayout>
                </DataTemplate>
            </ListView.FooterTemplate>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Padding="0,10,0,10" BackgroundColor="{AppThemeBinding Dark=#2e2e2e, Light=White}">

                            <Label Text="{Binding HalfVerse}" />
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Label
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Text="{Binding SecondNumber}" />
                                <Label
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    LineBreakMode="CharacterWrap"
                                    Text="{Binding Content}" />
                            </Grid>
                        </StackLayout>
                    </ViewCell>

                </DataTemplate>

            </ListView.ItemTemplate>
        </ListView>


        <Grid
            x:Name="bottomGrid"
            Grid.Row="1"
            Margin="0,0,0,10"
            BackgroundColor="Transparent"
            VerticalOptions="End">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button
                x:Name="leftImageButton"
                Grid.Column="0"
                BackgroundColor="Transparent"
                Clicked="OnLeftButtonClicked"
                FontSize="40"
                IsVisible="false"
                Text="◀" />
            <Frame
                x:Name="centerFrame"
                Grid.Column="1"
                Margin="0"
                Padding="0"
                BackgroundColor="Transparent"
                CornerRadius="15"
                HasShadow="False">
                <Label
                    x:Name="centerLocationLabel"
                    BackgroundColor="Transparent"
                    FontSize="15"
                    HorizontalOptions="CenterAndExpand"
                    Text="1/4"
                    TextColor="{AppThemeBinding Dark=White,
                                                Light=Black}"
                    VerticalOptions="CenterAndExpand" />
            </Frame>
            <Button
                x:Name="rightImageButton"
                Grid.Column="2"
                BackgroundColor="Transparent"
                Clicked="OnRightButtonClicked"
                FontSize="40"
                Text="▶" />
        </Grid>

    </Grid>
</ContentPage>


