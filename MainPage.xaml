<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="htmlparsing.MainPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="오늘의 만나 Beta">
    <ContentPage.ToolbarItems>
        <ToolbarItem Clicked="ToolbarItem_Clicked" Text="info" />
    </ContentPage.ToolbarItems>

    <ScrollView>
        <StackLayout Padding="40">
            <Image
                x:Name="image"
                HeightRequest="200"
                HorizontalOptions="StartAndExpand"
                WidthRequest="500" />
            <Label x:Name="MannaText" />
            <Button
                BackgroundColor="AliceBlue"
                Clicked="CoppyButton"
                FontSize="30"
                Text="Coppy to Clipboard" />
            <Button
                Clicked="Button_Clicked"
                FontSize="25"
                Text="새로고침"
                VerticalOptions="EndAndExpand" />
            <Button
                Clicked="OnLogoutClicked"
                FontSize="15"
                Text="Logout" />
        </StackLayout>
    </ScrollView>
</ContentPage>