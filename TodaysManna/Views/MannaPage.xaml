<ContentPage
    x:Class="TodaysManna.Views.MannaPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
    xmlns:local="clr-namespace:TodaysManna.Views;assembly=TodaysManna"
    xmlns:yummy="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
    Title="만나"
    ios:Page.PrefersHomeIndicatorAutoHidden="true"
    ios:Page.UseSafeArea="true"
    BackgroundColor="{AppThemeBinding Dark=#2e2e2e,
                                      Light=White}"
    NavigationPage.HasNavigationBar="True"
    Shell.NavBarIsVisible="False">

    <NavigationPage.TitleView>
        <StackLayout Padding="15,0,15,0" Orientation="Horizontal">
            <Label
                BackgroundColor="Transparent"
                FontAttributes="Bold"
                FontSize="20"
                HorizontalOptions="Start"
                Text="만나"
                VerticalOptions="Center" />
            <ImageButton
                Padding="0,0,15,0"
                BackgroundColor="Transparent"
                Clicked="OnEnglishButtonClicked"
                HorizontalOptions="EndAndExpand"
                Source="ic_english"
                VerticalOptions="Center"
                WidthRequest="40" />
            <ImageButton
                Margin="0,0,5,0"
                Padding="8"
                BackgroundColor="Transparent"
                Clicked="OnShareButtonClicked"
                HorizontalOptions="End"
                Source="share"
                VerticalOptions="Center"
                WidthRequest="40" />
        </StackLayout>
    </NavigationPage.TitleView>


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />

        </Grid.RowDefinitions>


        <CollectionView
            Margin="15,0,15,0"
            BackgroundColor="{AppThemeBinding Dark=#2e2e2e,
                                              Light=White}"
            Footer="&#10;&#10;&#10;"
            ItemsSource="{Binding MannaContents}"
            VerticalScrollBarVisibility="Always">
            <CollectionView.Header>
                <StackLayout BackgroundColor="{AppThemeBinding Dark=#2e2e2e, Light=White}">
                    <Label
                        x:Name="today"
                        Padding="0,14,0,14"
                        Text="{Binding Today}"
                        TextColor="Gray" />

                    <Label
                        x:Name="verse"
                        FontAttributes="Bold"
                        Text="{Binding JsonMannaData.Verse}"
                        TextColor="{AppThemeBinding Dark=White,
                                                    Light=Black}" />
                </StackLayout>
            </CollectionView.Header>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="0,10,0,10">
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
                        </Grid.GestureRecognizers>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Label
                            Grid.Row="0"
                            Grid.Column="0"
                            Text="{Binding Number}"
                            TextColor="{AppThemeBinding Dark=White,
                                                        Light=Black}" />
                        <Label
                            Grid.Row="0"
                            Grid.Column="1"
                            LineBreakMode="CharacterWrap"
                            Text="{Binding MannaString}"
                            TextColor="{AppThemeBinding Dark=White,
                                                        Light=Black}" />
                    </Grid>

                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <yummy:PancakeView
            x:Name="rangeButton"
            BackgroundGradientEndPoint="0.5,0.0"
            BackgroundGradientStartPoint="0.0,0.5"
            VerticalOptions="End">
            <yummy:PancakeView.Shadow>
                <yummy:DropShadow Offset="2,2" Color="#000000" />
            </yummy:PancakeView.Shadow>
            <yummy:PancakeView.BackgroundGradientStops>
                <yummy:GradientStopCollection>
                    <yummy:GradientStop Offset="0" Color="LightPink" />
                    <yummy:GradientStop Offset="1" Color="LightSkyBlue" />
                </yummy:GradientStopCollection>
            </yummy:PancakeView.BackgroundGradientStops>
            <Label
                x:Name="allRangeLabel"
                FontSize="16"
                HorizontalOptions="Center"
                HorizontalTextAlignment="Center"
                Text="{Binding ShareRange}"
                TextColor="White"
                VerticalOptions="Center" />
        </yummy:PancakeView>

    </Grid>
</ContentPage>


