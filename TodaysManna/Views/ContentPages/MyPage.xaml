<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="TodaysManna.Views.MyPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
    xmlns:yummy="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
        xmlns:local="clr-namespace:TodaysManna"

    ios:Page.PrefersHomeIndicatorAutoHidden="true"
    ios:Page.UseSafeArea="true"
    BackgroundColor="{AppThemeBinding Dark=#2e2e2e,
                                      Light=White}"
    NavigationPage.BackButtonTitle=""
    NavigationPage.HasNavigationBar="True"
    Shell.NavBarIsVisible="False">
    <NavigationPage.TitleView>
        <StackLayout Padding="{OnPlatform Android='0,0,15,0', iOS='10,0,15,0'}" Orientation="Horizontal">
            <Label
                FontFamily="batang"
                BackgroundColor="Transparent"
                FontAttributes="Bold"
                HorizontalOptions="Start"
                Text="메모"
                VerticalOptions="Center">
                <Label.FontSize>
                    <OnPlatform
                        x:TypeArguments="x:Double"
                        Android="26"
                        iOS="24" />
                </Label.FontSize>
            </Label>
        </StackLayout>
    </NavigationPage.TitleView>

    <CollectionView
        x:Name="collectionView"
        BackgroundColor="{AppThemeBinding Dark=#2e2e2e,
                                          Light=White}"
        Footer="&#10;&#10;"
        SelectionChanged="OnCollectionViewSelectionChanged"
        SelectionMode="Single">
        <CollectionView.EmptyView>
            <StackLayout Padding="10,20,15,0">
                <Label
                    FontAttributes="Bold"
                    FontFamily="batang"
                    Text="아직 저장한 메모가 없네요!&#10;묵상을 작성해보는 것은 어떨까요?✍️&#10;(만나/맥체인 탭 ▶︎ 구절 터치 ▶︎ 메모 작성)">
                    <Label.FontSize>
                        <OnPlatform
                            x:TypeArguments="x:Double"
                            Android="20"
                            iOS="18" />
                    </Label.FontSize>
                </Label>
            </StackLayout>
        </CollectionView.EmptyView>
        <CollectionView.ItemTemplate>
            <DataTemplate>

                 <Grid Padding="15,5,15,5"  >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="AUTO" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>


                            <StackLayout
                                Grid.Column="0"
                                VerticalOptions="Center">
                                    <Label
                                        TextColor="{AppThemeBinding Dark=White, Light=LightGray}"
                                    FontFamily="batang"
                                    Text="{Binding Date}"
                                    VerticalOptions="Center">
                                        <Label.FontSize>
                                            <OnPlatform
                                                x:TypeArguments="x:Double"
                                                Android="14"
                                                iOS="12" />
                                        </Label.FontSize>
                                    </Label>
                                 <Label
                                   Margin="0,-5,0,0"

                                FontAttributes="Bold"
                                FontFamily="batang"
                                MaxLines="1"
                                LineBreakMode="TailTruncation"
                                Text="{Binding Verse}">
                                <Label.FontSize>
                                    <OnPlatform
                                        x:TypeArguments="x:Double"
                                        Android="18"
                                        iOS="16" />
                                </Label.FontSize>
                            </Label>
                                <Label
                                FontFamily="batang"
                                MaxLines="2"
                                LineBreakMode="TailTruncation"
                                Text="{Binding Note}">
                                <Label.FontSize>
                                    <OnPlatform
                                        x:TypeArguments="x:Double"
                                        Android="15"
                                        iOS="13" />
                                </Label.FontSize>
                            </Label>
                            </StackLayout>

                            <Image Grid.Column="1">
                                 <Image.Source>
                                    <FontImageSource
                                        FontFamily="materialdesignicons"
                                        Glyph="{x:Static local:FontIcons.ChevronRight}"
                                        Size="30"
                                        Color="{AppThemeBinding Dark=White,
                                                                Light=Black}">
                                        <FontImageSource.Size>
                                            <OnPlatform
                                                x:TypeArguments="x:Double"
                                                Android="32"
                                                iOS="30" />
                                        </FontImageSource.Size>
                                    </FontImageSource>
                                  </Image.Source>
                            </Image>
                     <BoxView HeightRequest="1" BackgroundColor="{AppThemeBinding Dark=White,
                                                                Light=LightGray}" Grid.Row="1" Grid.ColumnSpan="2"/>
                     </Grid>

